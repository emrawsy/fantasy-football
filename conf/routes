# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                               controllers.HomeController.index
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                   controllers.Assets.versioned(path="/public", file: Asset)

GET     /player/:id                                     controllers.PlayerManagerController.getPlayer(id:CardId)

GET     /player/get-amount/:id                          controllers.PlayerManagerController.getAmount(id:CardId)

POST    /player                                         controllers.PlayerManagerController.postNewPlayer

DELETE  /player/:id                                     controllers.PlayerManagerController.deletePlayerById(id)

POST    /player/update-player-name/:id/:newName         controllers.PlayerManagerController.updatePlayerName(id:CardId, newName)

POST    /player/decrease-amount/:id/:amount             controllers.PlayerManagerController.decreaseAmount(id:CardId, amount:Double)

POST    /player/increase-amount/:id/:amount             controllers.PlayerManagerController.increaseAmount(id:CardId, amount:Double)

GET     /present/:id                                    controllers.PlayerManagerController.present(id:CardId)